{
  "compilerOptions": {
    "paths": {
      "@configs/*": ["configs/*"],
      "@parser/*": ["parser/*"],
      "@models/*": ["models/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["services/*"],
      "@bot/*": ["bot/*"],
      "@i18n/*": ["i18n/*"],
      "*": ["node_modules/*", "types/*"]
    },
    "target": "ES2016",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./env.d.ts"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "lib": ["ES2016"],
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "env.d.ts", "src/locales/**/*.json"]
}
